extends ./layout.jade

mixin rowHeading(items)
    thead
      tr
        each item in items
            th= item

mixin rows(items)
        each item in items
            tr
                td
                  .url.assetsurl
                    a(href=item.url)= item.url
                td= item.type
                td= helper.prettyPrintSeconds(item.lastModification)
                td= helper.prettyPrintSeconds(item.cacheTime)
                td= helper.getKbSize(item.size, true)
                td= item.requestCount

block content
    h2 Most used assets
    table.sortable-theme-bootstrap(data-sortable, id='assets')
        +rowHeading(['url', 'type', 'time since last modified', 'cache time', 'size', 'count'])
        +rows(assets)
